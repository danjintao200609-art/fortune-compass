{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "../",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/types": [
                "../types"
            ]
        }
    },
    "include": [
        "src/**/*",
        "../types.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}