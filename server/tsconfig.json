{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/types": [
                "../types"
            ]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "src/controllers/profileController.ts",
        "src/middleware/authMiddleware.ts",
        "src/services/authService.ts"
    ]
}